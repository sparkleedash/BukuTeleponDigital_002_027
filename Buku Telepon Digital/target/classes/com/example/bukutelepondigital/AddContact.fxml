<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="170.0" prefWidth="150.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22" fx:controller="com.example.bukutelepondigital.AddContactController">
    <!-- Form untuk menambah kontak -->
    <TextField fx:id="nameField" layoutY="27.0" />
    <TextField fx:id="phoneField" layoutY="72.0" />

    <!-- TextField untuk memasukkan path foto yang dapat menerima drag and drop -->
    <TextField fx:id="photoPathField" layoutY="100.0" promptText="Drag and Drop Photo Here" />

    <Button fx:id="saveButton" layoutX="34.0" layoutY="122.0" text="Save" onAction="#saveContact" />
</AnchorPane>
