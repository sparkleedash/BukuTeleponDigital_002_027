<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="250.0" prefWidth="350.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22" fx:controller="com.example.bukutelepondigital.EditContactController">
    <TextField fx:id="nameField" layoutX="14.0" layoutY="14.0" promptText="Name" />
    <TextField fx:id="phoneField" layoutX="14.0" layoutY="60.0" promptText="Phone Numbers (comma separated)" />
    <TextField fx:id="photoPathField" layoutX="14.0" layoutY="106.0" promptText="Photo Path" />
    <Button fx:id="saveButton" layoutX="120.0" layoutY="160.0" text="Save" onAction="#saveChanges" />
    <Button fx:id="deleteButton" layoutX="220.0" layoutY="160.0" text="Delete" onAction="#deleteContact" />
</AnchorPane>
